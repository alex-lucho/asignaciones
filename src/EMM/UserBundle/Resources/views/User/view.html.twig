{% extends 'layout.html.twig' %}

{% block body %}
	{{ parent() }}
	<div class="container well">
		<div class="col-md-9">
			<h2>{{ user.firstname }} {{ user.lastName }}</h2>
			<br>
			<dl>
				<dt>{{ 'Username' }}</dt>
				<dd>
					{{ user.username }}
					&nbsp;
				</dd>
				<br>
				<dt>{{ 'First Name' }}</dt>
				<dd>
					{{ user.firstName }}
					&nbsp;
				</dd>
				<br>
				<dt>{{ 'Last Name' }}</dt>
				<dd>
					{{ user.lastName }}
					&nbsp;
				</dd>
				<br>
				<dt>{{ 'Email' }}</dt>
				<dd>
					{{ user.email }}
					&nbsp;
				</dd>
				<br>
				<dt>{{ 'Role' }}</dt>
				<dd>
					{% if user.role == 'ROLE_ADMIN' %}
						Administrador
					{% elseif user.role == 'ROLE_USER' %}
						User
					{% endif %}
					&nbsp;
				</dd>
				<br>
				<dt>{{ 'Active' }}</dt>
				<dd>
					{% if user.isActive == 1 %}
						<div class="text-success">Enable</div>
					{% elseif user.isActive == 0 %}
						<div class="text-warning">Disabled</div>
					{% endif %}
					&nbsp;
				</dd>
				<dt>{{ 'Created' }}</dt>
				<dd>
					{{ user.createdAt|date('d-m-Y H:i') }}
					&nbsp;
				</dd>
				<br>
				<dt>{{ 'Update' }}</dt>
				<dd>
					{{ user.createdAt|date('d-m-Y H:i') }}
					&nbsp;
				</dd>
				<br>
			</dl>
		</div>
		<div class="col-md-3">
			<h3>{{ 'Actions' }}</h3>
			<p>
				<a href="{{ path('emm_user_edit', { id: user.id }) }}" class="btn btn-primary btn-lg btn-block">
					<span class="glyphicon glyphicon-edit"></span>
					{{ 'Edit user' }}
				</a>
			</p>
			<p>
				{{ include('EMMUserBundle:User:forms/form.html.twig', { form: delete_form, message:'Are you sure?' }) }}
			</p>
		</div>
	</div>
{% endblock %}